{
  "kind": "collectionType",
  "collectionName": "blogs",
  "info": {
    "singularName": "blog",
    "pluralName": "blogs",
    "displayName": "Blog",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Title": {
      "type": "string"
    },
    "Date": {
      "type": "date"
    },
    "Slug": {
      "type": "uid",
      "targetField": "Title"
    },
    "blogPost": {
      "type": "dynamiczone",
      "components": [
        "post.text-block",
        "post.media",
        "post.quote"
      ]
    },
    "Author": {
      "type": "enumeration",
      "enum": [
        "Casi",
        "Danny"
      ],
      "default": "Casi",
      "required": true
    },
    "Thumbnail": {
      "allowedTypes": [
        "images",
        "videos"
      ],
      "type": "media",
      "multiple": false,
      "required": true
    }
  }
}
